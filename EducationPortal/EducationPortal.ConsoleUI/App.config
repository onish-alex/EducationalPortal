<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="accountSettings" type="System.Configuration.NameValueSectionHandler"/>
  </configSections>

  <accountSettings>
    <add key="LoginMinLength" value="3"/>
    <add key="LoginMaxLength" value="20"/>
    
    <add key="PasswordMinLength" value="3"/>
    <add key="PasswordMaxLength" value="20"/>
    
    <add key="NameMinLength" value="3"/>
    <add key="NameMaxLength" value="50"/>

    <add key="AllowableSymbols" value="abcdefghijklmnopqrstuvwxyzабвгдеёжзийклмнопрстуфхцчшщъыьэюя1234567890_"/>
  </accountSettings>

</configuration>