@{
    ViewData["Title"] = "Регистрация";
}

@model RegisterViewModel

<div class="container">
    <h2 class="text-center mb-3">Регистрация</h2>
    <form asp-controller="Account" asp-action="Register">
        <div class="row text-center justify-content-center" asp-validation-summary="All"></div>

        <div class="row text-center justify-content-center mb-2 mt-2">
            <input type="text" asp-for="Account.Login" placeholder="Логин" />
        </div>
        <div class="row text-center justify-content-center mb-2 mt-2">
            <input type="text" asp-for="Account.Email" placeholder="Email" />
        </div>
        <div class="row text-center justify-content-center mb-2">
            <input type="password" asp-for="Account.Password" placeholder="Пароль" />
        </div>
        <div class="row text-center justify-content-center mb-2">
            <input type="text" asp-for="User.Name" placeholder="Ваше имя" />
        </div>
        <div class="row text-center justify-content-center mb-2">
            <input type="submit" value="Регистрация" class="btn btn-primary" />
        </div>
        <div class="row text-center justify-content-center mb-2">
            <a asp-action="Login" asp-controller="Account" class="btn btn-link">Авторизоваться</a>
        </div>
    </form>
</div>
